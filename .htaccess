RewriteEngine On
DirectorySlash Off

ErrorDocument 404 /home/error

# Ne jamais réécrire /assets/ (ni ses sous-dossiers)
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^ - [L]

# Ignorer les fichiers et dossiers réels
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Cas sans préfixe langue
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
